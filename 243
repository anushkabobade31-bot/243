#include <stdio.h>
#include <conio.h>
void main() {
    int mode;
    clrscr();
    printf("1.Pick\n2.Place\n3.Stop\nEnter Mode: ");
    scanf("%d",&mode);
    switch(mode) {
        case 1: printf(" picking object..."); break;
        case 2: printf(" placing object..."); break;
        case 3: printf(" stopped."); break;
        default: printf("Invalid  Mode!");
    }
    getch();
}
